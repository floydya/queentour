	.top-about, .about, .supply, .fixed-menu
		min-width 720px
	.top-about__name
		padding-top 30px
		margin-bottom 10px
	.about__content
		padding-top 10px
	.about__left, .about__right
		width 100%
		float none 
		margin-bottom 15px
	.about__left
		padding-bottom 10px
	.about__name
		text-align center
	.about__table
		margin-bottom 12px
	.about__td1
		font-size 18px
	.about__td2 
		width 25%
	.about__td3
		font-size 14px
	.about__push, .about__change
		width 70%
	.about__text
		width 25%
	.about__part-list
		width 80%
		margin 10px auto 0
	.about__consult-picture
		width 19%
	.about__consult-desc
		width 78%
	.about__name-margin
		margin-top 0
	.fixed-menu__block
		width 35%
		margin-right 3%
	.fixed-menu__block:nth-child(3)
		width 18%
	.fixed-menu__block:nth-child(4)
		width 18%
		margin-top 10px
	.fixed-menu__block:last-child
		width 35%
		margin-top 10px
	.fixed-menu__description
		margin-left 35px
	.tour__name2
		text-align left
		margin-left 33px
	
	
		
	

@media screen and (max-width: 720px)
	.top-about, .about, .supply, .fixed-menu
		min-width 480px
	.top-about__name
		padding-top 20px
		margin-bottom 5px
	.nav-block
		margin-bottom 15px
	.about__td2
		display none
	.about__name
		text-align left
	.about__text
		width 38%
	.about__push
		width 60%
	.about__part-list
		width 100%
	.about__consult-picture
		width 31%
	.about__consult-desc
		width 66%
	.about__td1
		font-size 16px
	.nav-block__li
		display block 
		float left 
		padding 0 5px
	.fixed-menu__block
		width 46%
	.fixed-menu__block:nth-child(3)
		width 23%
		margin-top 10px
	.fixed-menu__block:nth-child(4)
		width 26%
	.fixed-menu__block:last-child
		width 45%
	.fixed-menu__link, .fixed-menu__label, .fixed-menu__label2
		font-size 12px

