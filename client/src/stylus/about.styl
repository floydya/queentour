		float none 
		width 100%
	.about__desc
		text-align center
	.about__consult
		position relative
		height 300px
	.about__plus-ul
		width 60%
		margin 10px auto
	.about__consult-picture
		width 38%
	.about__consult-desc
		width 60%
		text-align center
	.about__tel
		font-size 18px
		position absolute
		left 70px 
		bottom 50px
	.about__button-form
		position absolute
		bottom 15px
		left 17px
