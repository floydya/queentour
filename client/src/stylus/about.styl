	.top-about, .about, .supply, .fixed-menu
		min-width 320px
	.top-about__name
		padding-top 10px 
		font-size 24px
		margin-left 5px
	.nav-block
		margin-left 0
	.nav-block__a
		font-size 13px
	.about__content
		padding 0
	.about__name
		font-size 20px 
		margin-bottom 5px
	.about__td1
		font-size 14px
	.about__td3
		font-size 12px
	.about__left, .about__right
		padding-left 10px 
		padding-right 10px
	.about__forma-top
		margin-bottom 10px
	.about__text-all p 
		margin-bottom 5px
