.top-about
	display block
	min-width 1110px
	background url(../img/ab-fon.png) no-repeat
	background-position top center
	&__name
		margin-left 33px
	&__galery
		padding 30px 30px 0 30px
		background #fff

.nav-block
	margin-bottom 45px
	margin-left 33px
	&__ul
		display table
		list-style none
	&__li 
		display table-cell
		padding 0 4px
	&__a
		text-decoration none
		color #fff
	&__a:hover
		color #FFC600
	&__span
		color #fff

.fixed-menu
	display block
	min-width 1110px
	background #000 
	opacity 0.8
	&__content 
		padding 30px 0
	&__block
		width 24%
		margin-right 2.5%
		float left
	&__block:nth-child(3)
		width 12%
	&__block:nth-child(4)
		width 12%
	&__block:last-child 
		width 18%
		margin-right 0
	&__picture
		float left
	&__description
		margin-left 48px
		color #fff
	&__link 
		color #fff
		text-transform uppercase
	&__link:hover 
		text-decoration none
	&__label 
		margin-top 8px
	&__label2 
		margin-bottom 8px
	&__price
		color #fff
		font-size 24px
		margin-top 6px
		&--span 
			font-size 14px 
			text-transform uppercase
	&__submit 
		font-size 14px
		font-weight bold
		margin-top 0
		padding 16px 0
.about
	display block
	min-width 1110px
	&__content
		padding 0 30px 30px 30px
	&__left, &__right
		width 48.1%
		float left
	&__left 
		margin-right 3.8%
	&__right
		padding 0 26px 
	&__name
		font-size 27px
		color #000
		margin-bottom 18px
	&__name-margin
		margin-top -14px
	&__table
		width 100%
		margin-bottom 22px
	&__tr
		width 100%
	&__td1
		font-size 19px
		color #000 
		font-weight bold
		padding 4px 0
		border-bottom: 1px solid #E3E3E3
	&__td2
		width 2%
		padding 4px 0
		border-bottom: 1px solid #E3E3E3
	&__td3
		font-size 14px
		font-weight bold
		padding 4px 0
	&__td3-upper
		text-transform uppercase
	&__link
		text-transform uppercase
		color #000
	&__link:hover
		color #E9B500
	&__text-all
		margin-top 7px

	&__text-all p
		margin-bottom 15px
	&__text-span1 
		opacity 0.6
	&__text-span2
		opacity 0.5
	&__text-span3 
		opacity 0.3
	&__text-span4 
		opacity 0.2
	&__more
		font-size 14px
		font-weight bold
		color #000
		margin-top 22px
		text-transform uppercase
		text-decoration underline
	&__more:hover 
		text-decoration none
		cursor pointer
	&__right 
		background #F3F3F3
	&__forma
		padding 30px 0
		border-bottom 1px solid #DDDDDD
	&__forma-top
		margin-bottom 32px
	&__date
		width 20%
		float left
	&__desc
		font-size 18px
		color #000
		margin-top 12px
	&__kol
		font-size 24px
		font-weight bold
		&--span
			font-weight 100 
			font-size 14px

	&__change
		width 75%
		float right
		overflow hidden
		border-radius 8px
	&__change-select
		width 100%
		padding 14px 16px
		font-size 16px
		border-top none
		border-left none
		border-right none
		border-bottom 1px solid #DDDDDD
	&__text
		width 33%
		float left
		text-align right
	&__push
		width 63%
		float right
	&__part-list
		margin-top 5px
	&__part-block
		width 50%
		float left
	&__plus-ul
		margin-left 10px
		margin-top 15px
	&__plus-li:before
		content url(../img/v.svg)
		vertical-align middle
		display inline-block
		padding-right 10px
	&__plus-li
		list-style none
		font-size 16px
		padding-left 7px
		margin-bottom 5px
		padding-right 15px
		position relative
	&__plus-li
		color #000
		text-decoration none
	&__plus-li:hover
		cursor pointer
		text-decoration underline
	&__min-li:before
		content url(../img/no.svg)
	&__plus-icon
		display inline-block
		margin-left 12px
		width 15px 
		height 15px
		background url(../img/q-one.svg) no-repeat
	&__plus-li:hover &__plus-icon
		background url(../img/qw.svg) no-repeat
	&__hint
		display none
		width 110%
		font-size 14px
		padding 18px 12px
		background #fff
		border 1px solid #E2E2E2
		border-radius 4px
		position absolute
		top 24px
		left -20px
		z-index 1
	&__hint p 
		margin-bottom 3px
	&__plus-li:hover &__hint 
		display block
	&__consult
		padding 26px 0
		&--size 
			max-width 131px
			max-height 113px
	&__consult-picture
		width 25%
		float left
		position relative
	&__consult-icon
		background #fff
		border-radius 18px
		position absolute
		right 0
		bottom 0
	&_consult-size
		max-width 112px
		max-height 130px
	&__consult-desc
		width 70%
		float right
	&__consult-text
		color #4F4F4F
	&__tel
		font-size 22px
		color #000 
		text-align center
		margin 10px 0
	&__button-form
		margin-top 10px
		text-transform uppercase
		color #000
		font-weight bold
		text-decoration underline
	&__button-form:hover 
		cursor pointer
		text-decoration none
.about__text-span-all 
	opacity 1
.about__text-show
	display block
.about__text-hide
	display none
.supply
	display block
	min-width 1110px
	background #FAFAFA
	border-top 1px solid #EEEEEE
#menu
	width 100%
.default
	width 100%
	display none
.fixed
	display block
	position fixed 
	top 0 
	left 0
	z-index 1000
	width 100%


@media screen and (max-width: 1110px)
	.top-about, .about, .supply, .fixed-menu
		min-width 960px
	.about__date
		width 26%
	.about__change
		width 72%
	.about__push
		width 60%
	.about__text
		width 38%
	.about__consult-picture
		width 30%
	.about__consult-desc
		width 65%


