.reviews
	display block
	min-width 1110px
	background #F2F2F2 url(../img/rew.png) no-repeat
	background-position bottom center
	border-top 1px solid #D7D7D7
	&__content
		width 100%
		padding-bottom 80px
		margin-top 35px
	&__top 
		width 100% 
		padding 45px 30px 30px 30px
		background #fff
	&__type 
		height 33px
		padding-top 0
	&__part 
		width 100%
	&__left 
		width 49.5%
		float left 
		margin-right 1%
	&__left:last-child 
		margin-right 0
	&__block 
		width 100%
		padding 20px 39px 30px 40px
		background #fff
		margin-bottom 10px
	&__client
		color #000
	&__client-name
		font-size 19px
		font-weight bold
		color #343434
	&__status 
		font-size 15px
		font-weight bold 
		color #343434
	&__date 
		margin-top 11px 
		margin-bottom 17px
	&__span
		font-size 17px 
	&__link
		font-size 14px 
		text-transform uppercase
		font-weight bold
		margin-left 17px
		color #000 
	&__link:hover 
		color #E9B500
	&__text 
		font-size 14px 
	&__text p 
		margin-bottom 17px
	&__photos 
		width 100% 
		margin-top 20px 
	&__img 
		display block
		width 115px
		height 74px
		float left  
		margin 0 3px 3px 0 
		background url(../img/rew1.png) no-repeat
		background-size cover
		text-decoration none
	&__img:nth-child(4n)
		margin-right 0
	&__soc
		width 100% 
		&--size 
			max-width 470px 
			height 160px 
			width 100%
	&__video
		width 100%
		margin-top 12px
	&__iframe
		width 100% 
		height 264px

@media screen and (max-width: 1110px)
	.reviews
		min-width 960px
	.reviews__img
		width 130px 
		height 94px
	.reviews__img:nth-child(3n)
		margin-right 0
	.reviews__img:nth-child(4n)
		margin-right 3px

@media screen and (max-width: 960px)
	.reviews
		min-width 720px
	.reviews__top
		padding-top 30px 
		padding-bottom 0
	.reviews__left
		width 100% 
		float none
	.reviews__img
		width 125px 
		height 85px
	.reviews__img:nth-child(5n)
		margin-right 0
	.reviews__img:nth-child(3n)
		margin-right 3px
	.reviews__iframe
		height 400px
	.reviews__type
		height auto
	.reviews__button
		display block 
		float left
		font-size 15px 

@media screen and (max-width: 720px)
	.reviews
		min-width 480px
	.reviews__content 
		padding-top 40px
	.reviews__top
		padding 10px 10px 0 10px 
	.reviews__button
		font-size 14px
	.reviews__block
		padding 15px 10px 10px 10px
	.reviews__img
		width 112px 
		height 75px
	.reviews__img:nth-child(4n)
		margin-right 0
	.reviews__img:nth-child(5n)
		margin-right 3px
	.reviews__iframe
		height 230px
	.reviews__date, .reviews__text p 
		margin-bottom 7px


@media screen and (max-width: 480px)
	.reviews
		min-width 320px
	.reviews__button
		width 100% 
		text-align center
		font-size 13px
	.reviews__client-name
		font-size 17px 
	.reviews__text
		font-size 13px 
	.reviews__text 
		margin-bottom 5px
	.reviews__date
		margin-top 3px 
		font-size 13px 
		margin-bottom 5px
	.reviews__img
		width 90px 
		height 60px
	.reviews__img:nth-child(3n)
		margin-right 0
	.reviews__img:nth-child(4n)
		margin-right 3px
	.reviews__iframe
		height 190px
	.reviews__soc--size
		height 100%
	
		
		
	
