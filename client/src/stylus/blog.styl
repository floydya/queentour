.blog
	display block
	min-width 1110px
	background #F2F2F2 url(../img/blog-fon.png) no-repeat
	background-position bottom center
	border-top 1px solid #D7D7D7
	&__title
		padding-top 28px
		font-size 39px
		color #343434
		margin-left 25px
	&__content
		margin-top 28px
		padding-bottom 80px
	&__part 
		width 100%
	&__left 
		width 71%
		float left
		padding 25px 25px 0 25px
		background #fff
	&__left-part 
		width 100%
	&__wrap
		width 49%
		float left
		margin-right 2%
		margin-bottom 22px
	&__wrap:nth-child(2n)
		margin-right 0
	&__wrap-link
		display block
		text-decoration none
		color #000
	&__picture
		width 100%
		height 240px
		position relative
		&--size 
			max-width 360px
			max-height 100%
			width 100%
	&__hover
		display none
		width 100%
		height 100%
		position absolute
		top 0 
		left 0
		background #000
		opacity 0.8
		padding 25px
	&__hover-text
		color #fff
		font-size 15px
		line-height 18px
		height 90px
		overflow hidden
	&__hover-rating
		margin-top 12px
		font-size 15px
		color #fff
	&__hover-span
		font-weight bold
		margin-right 12px
	&__hover-img
		margin-right 1px
	&__hover-button
		display block
		 width 104px
		 margin 18px auto 0
		 text-align center
		 text-decoration none
		 text-transform uppercase
		 font-size 10px
		 padding 8px 0
		 color #fff 
		 border 1px solid #fff 
		 border-radius 25px
	&__hover-button:hover
		color #000
		border 1px solid #FFC600
		background #FFC600
	&__picture:hover &__hover 
		display block
	&__date
		margin-top 10px 
		color #858585
		font-size 15px
		line-height 18px
		height 18px
		overflow hidden
	&__news
		font-size 18px
		line-height 22px
		height 66px
		overflow hidden
	&__right 
		width 28%
		float right
	&__top-form
		width 100%
		padding 20px 16px 25px 16px
		background #fff
		margin-bottom 11px
	&__forums
		width 100%
	&__change
		float left
	&__checbox
		display none
	&__label
		display block
		font-size 14px
		font-weight bold
		text-transform uppercase
		padding 12px
		background none
	&__delivery
		width 100%
		background url(../img/blog-fon2.png)
		padding 25px
		color #fff
		text-align center
		margin-bottom 11px
	&__form-title
		font-size 30px
		text-transform uppercase
	&__form-decs
		font-size 19px
		text-transform uppercase
		margin-bottom 100px
	&__form-evidence
		width 100%
	&__form-email
		width 100% 
		text-align center
		padding 12px
		font-size 17px
		background #fff
		border none
		border-radius 5px
		box-shadow 0 0 5px rgba(0,0,0,0.2)
		margin-bottom 5px
	&__form-submit
		width 100%
		text-align center
		text-transform uppercase
		padding 14px
		font-size 14px
		background #FFC600
		border-radius 35px
		border none
		-webkit-appearance none
	&__form-submit:hover
		cursor pointer
		background #ffd200
	&__popular
		width 100%
		background #fff 
		padding 20px 16px 25px 16px
	&__popular-block
		width 100%
		margin-bottom 10px 
	&__popular-link
		text-decoration none
		color #000
	&__popular-picture 
		width 100%
		height 182px 
		&--size 
			max-width 272px
			max-height 182px 
			width 100%
	&__popular-date
		color #858585
		font-size 15px
		line-height 18px
		height 18px 
		margin-top 3px
		overflow hidden 
	&__popular-news
		font-size 15px
		line-height 18px
		height 54px
		overflow hidden
	&__button 
		display block
		width 139px
		margin 15px auto 0 
		text-align center
		text-transform uppercase
		font-size 14px
		font-weight bold
		text-decoration none
		color #000
		padding 10px 0
		background #ffc600
		border-radius 35px
	&__button:hover 
		background #ffd200


@media screen and (max-width: 1110px)
	.blog 
		min-width 960px
	.blog__picture
		height 207px
	.blog__hover
		padding 15px
	.blog__hover-rating
		margin-top 5px
	.blog__hover-button
		margin-top 10px
	.blog__form-decs
		margin-bottom 75px

@media screen and (min-width: 960px)
	.heading, .button-top
		display none!important

@media screen and (max-width: 960px)
	.blog 
		min-width 720px
	.blog__popular
		display none
	.blog__left
		width 100%
		float none
		padding-bottom 2px
	.blog__picture
		height 219px
	.blog__right
		display block
		width 100%
		margin-top 35px
		float none
	.blog__delivery
		width 75%
		margin 0 auto
		background-size cover
	.blog__form-evidence
		margin-bottom 20px
	.blog__form-title
		font-size 50px
	.blog__form-decs
		font-size 30px
		margin-bottom 170px
	.blog__button
		display block
	.heading
		display block
		width 139px
		text-align center
		text-transform uppercase
		font-size 14px
		font-weight bold
		text-decoration none
		color #000
		padding 10px 0
		background #ffc600
		border-radius 35px
		position absolute 
		top 37px 
		right 30px
	.blog__button:hover, .heading:hover
		cursor pointer
		background #ffd200
	.blog__top-form
		width 100%
		height 100%
		padding 0
		overflow auto
		position fixed
		background rgba(49, 49, 49, 0.7)
		top -100%
		left 0
		z-index 100
		-webkit-transition top 1s ease-out 0.5s
		-moz-transition top 1s ease-out 0.5s
		-o-transition top 1s ease-out 0.5s
		transition top 1s ease-out 0.5s
	.blog__popular-active
		position fixed
		left 0
		top 133px
	.blog__top-form-mobile
		width 100%
		background #fff
		padding 20px
		text-align center
		position absolute
		top 0 
		left 0 
		z-index 200
	.blog__heading
		width 700px
		margin 0 auto
	.blog__label
		font-size 16px

@media screen and (max-width: 720px)
	.blog 
		min-width 480px
	.blog__left
		padding 10px
	.blog__picture
		height 150px
	.blog__hover
		padding 5px
	.blog__hover-rating
		margin-top 0
	.blog__hover-text
		height 54px
	.blog__delivery
		width 100%
	.blog__title
		font-size 30px
	.heading 
		top 29px
	.blog__heading
		width 460px
	.blog__label
		font-size 15px

@media screen and (max-width: 480px)
	.blog 
		min-width 320px
	.blog__content
		padding-bottom 40px
	.blog__title
		margin-left 10px
		font-size 24px
	.blog__wrap
		width 100%
		float none
		margin-bottom 12px
	.blog__picture
		height 200px
	.blog__hover-rating
		margin-top 5px
	.blog__hover-text
		height 90px 
	.blog__hover
		padding 10px
	.blog__form-title
		font-size 28px 
	.blog__form-decs
		font-size 22px
		margin-bottom 100px
	.heading 
		right 0
		width 105px
	.blog__heading
		width 300px
	.blog__top-form-mobile
		padding 10px
	.blog__label
		font-size 13px
		padding 8px
	.blog__button
		margin-top 12px 
		margin-bottom 18px	
.blog__label-active
	background #FFD200
	