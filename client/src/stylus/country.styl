.country
	display block
	min-width 1110px
	background url(../img/country-fon.png) no-repeat
	background-position top center
	&__content 
		padding-bottom 30px
	&__part
		width 100% 
		padding 30px 
		background #fff
		margin-top 30px
	&__block
		width 23.8%
		height 250px
		float left 
		margin-right 1.6%
		text-align center
		margin-bottom 17px
		position relative
	&__block:nth-child(4n)
		margin-right 0
	&__block-link 
		text-decoration none
		color #fff
	&__picture
		width 100%
		&--size 
			max-width 250px
			max-height 250px
			width 100%
	&__eclipse
		width 100%
		position absolute
		left 0 
		bottom 0
		padding 16px 5px
		background #000 
		opacity 0.8
	&__title
		font-size 23px


@media screen and (max-width: 1110px)
	.country
		min-width 960px
		&__block 
			height 220px


@media screen and (max-width: 960px)
	.country
		min-width 720px
		&__block
			width 32%
			margin-right 2%
			margin-bottom 12px
			height 213px
		&__block:nth-child(4n)
			margin-right 2%
		&__block:nth-child(3n)
			margin-right 0


@media screen and (max-width: 720px)
	.country
		min-width 480px
		&__part 
			padding 10px
		&__block
			width 49%
			margin-right 2%
			margin-bottom 9px
			height 228px
		&__block:nth-child(4n), &__block:nth-child(3n)
			margin-right 2%
		&__block:nth-child(2n)
			margin-right 0

@media screen and (max-width: 480px)
	.country
		min-width 320px
		&__part 
			padding 15px 35px
		&__block
			width 100%
			float none
			margin-right 0
			margin-bottom 15px
			height 250px
		&__block:nth-child(4n), &__block:nth-child(3n)
			margin-right 0
		
	