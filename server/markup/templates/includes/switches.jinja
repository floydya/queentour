{% if page_obj and page_obj.has_other_pages() %}
    <div class="tour__switches">
        <ul class="tour__list clearfix">
            {% for i in page_obj.paginator.page_range %}
                {% if page_obj.number == i %}
                    <li class="tour__item"><a class="tour__link tour__link-active">{{ i }}</a></li>
                {% else %}
                    <li class="tour__item">
                        <a href="?page={{ i }}{% for key,value in request.GET.items() %}{% if key != 'page' %}&{{ key }}={{ value }}{% endif %}{% endfor %}" class="tour__link">{{ i }}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
        {% if page_obj.has_next() %}
            <a href="?page={{ page_obj.next_page_number() }}{% for key,value in request.GET.items() %}{% if key != 'page' %}&{{ key }}={{ value }}{% endif %}{% endfor %}" class="tour__transition-next"></a>
        {% endif %}
        {% if page_obj.has_previous() %}
            <a href="?page={{ page_obj.previous_page_number() }}{% for key,value in request.GET.items() %}{% if key != 'page' %}&{{ key }}={{ value }}{% endif %}{% endfor %}" class="tour__transition-prev"></a>
        {% endif %}
    </div>
{% endif %}